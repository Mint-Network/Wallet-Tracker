{
  "$schema": "https://schema.tauri.app/2/tauri.config.json",
  "identifier": "com.wallet-tracker.app",
  "productName": "Wallet Tracker",
  "version": "1.0.0",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "security": {
      "csp": null
    },
    "windows": [
      {
        "title": "Wallet Tracker",
        "width": 1000,
        "height": 700,
        "minWidth": 800,
        "minHeight": 500,
        "resizable": true,
        "fullscreen": false
      }
    ]
  },
  "bundle": {
    "icon": ["icons/icon.ico"],
    "category": "Finance",
    "shortDescription": "Derive multi-chain wallet addresses from mnemonic or xpub",
    "longDescription": "Wallet Tracker derives addresses for ETH, BTC, LTC, BCH, and SOL from a mnemonic or extended public key, with optional ETH balance enrichment."
  },
  "plugins": {}
}
